server {
    listen 80;

    server_name  helpcenter.softuni.tk;
    # Intentionally commented out with option to revert easily regions selection logic
    # server_name  ~^(?<name>.+)\.helpcenter.softuni.tk;

    location / {
        return 301 https://$host$request_uri;
    }

    location /.well-known/acme-challenge/ {
       root /var/www/certbot;
    }
}

server {
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    listen 443 ssl;

    server_name  helpcenter.softuni.tk;
    # Intentionally commented out with option to revert easily regions selection logic
    # server_name ~^(?<name>.+)\.helpcenter.softuni.tk;

    ssl_certificate /etc/letsencrypt/live/softuni.tk/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/softuni.tk/privkey.pem;

    merge_slashes off;
    rewrite ^(.*?)//+(.*?)$ $1/$2 permanent;
    large_client_header_buffers 4 16k;
    access_log /var/log/nginx/access.log json_combined;

    location /api/ {
        include /etc/nginx/shared/*;

        proxy_pass http://gateway/api/;
    }

    location / {
        include /etc/nginx/shared/*;

        proxy_pass http://help_center_ui/;
    }
}

server {
    listen 80;

    server_name ~^(?<name>.+)\.helpcenter.softuni.tk;

    return 301 $scheme://helpcenter.softuni.tk$request_uri;
}

server {
    listen 443 ssl;

    server_name ~^(?<name>.+)\.helpcenter.softuni.tk;

    return 301 $scheme://helpcenter.softuni.tk$request_uri;
}
