server {
    listen 80;
    # server_name localhost;
    server_name  ~^(?<name>.+)\.interactive.serveo.net$;

    location / {
        return 301 https://$host$request_uri;
    }

    location /.well-known/acme-challenge/ {
       root /var/www/certbot;
    }
}

server {
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    listen 443 ssl;
    server_name  ~^(?<name>.+)\.interactive-test.tk$;
    ssl_certificate /etc/letsencrypt/live/interactive.serveo.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/interactive.serveo.net/privkey.pem;

    merge_slashes off;
    rewrite ^(.*?)//+(.*?)$ $1/$2 permanent;
    large_client_header_buffers 4 16k;
    access_log /var/log/nginx/access.log json_combined;
    
    # set_by_lua_block $name_lower { return $name:lower() }
    # set_by_lua_block $region_lower { return $region:lower() }

    if ( $region != bg ) {
        set $cond no_default_region;
    }

    if ( $name_lower != $region_lower ) {
        set $cond "${cond}+not_same_region";
    }
    
    #if ( $cond = "no_default_region+not_same_region" ) {
        # return 307 $scheme://$region.$host$request_uri;
    #}

    location /api/ui-content/ {
        resolver 127.0.0.1 valid=30s;

        proxy_pass http://localnode:8031/;
        
        # index index.html index.htm;
        proxy_http_version 1.1;
        proxy_set_header Upgrade           $http_upgrade;
        proxy_set_header Connection        keep-alive;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        # proxy_set_header X-Region-Code $geoip2_data_country_code;
        proxy_cache_bypass $http_upgrade;
        proxy_cache_bypass $http_upgrade;

        more_set_headers 'X-My-Condition : $cond';
        more_set_headers 'X-Region-Code : $geoip2_data_country_code';

        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;
    }
}
