server {
    listen 80;

    server_name  ~^(?<name>.+)\.stage.softuni.org;
    server_name  stage.softuni.org;

    location / {
      return 301 https://$host$request_uri;
    }

    location /.well-known/acme-challenge/ {
      root /var/www/certbot;
    }
}

server {
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    listen 443 ssl;

    server_name stage.softuni.org;
    server_name ~^(?<name>.+)\.stage.softuni.org;

    ssl_certificate /etc/letsencrypt/live/build.softuni.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/build.softuni.org/privkey.pem;

    merge_slashes off;
    rewrite ^(.*?)//+(.*?)$ $1/$2 permanent;
    large_client_header_buffers 4 16k;

    access_log /var/log/nginx/access.log json_combined;

    location /api/learning-content/ {
        include /etc/nginx/shared/*;

        proxy_pass http://stage_learning_content/;
    }

    location /api/payments/ {
        include /etc/nginx/shared/*;

        proxy_pass http://stage_payments/;
    }

    location /api/judge/ {
        include /etc/nginx/shared/*;

        proxy_pass http://stage_judge/;
    }

    location /api/lms/ {
        include /etc/nginx/shared/*;

        proxy_pass http://stage_lms/;
    }

    location /api/user-profiles/ {
        include /etc/nginx/shared/*;

        proxy_pass http://stage_user_profiles/;
    }

    location /api/ui-content/ {
        include /etc/nginx/shared/*;

        proxy_pass http://stage_ui_content/;
    }

    location /api/statistics/ {
        include /etc/nginx/shared/*;

        proxy_pass http://stage_statistics/;
    }

    location / {
    	access_by_lua_file '/etc/nginx/lua/region_based_url.lua';

        include /etc/nginx/shared/*;
        proxy_pass http://stage_ui/;
    }
}
