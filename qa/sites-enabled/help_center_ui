server {
    listen 80;
    # server_name localhost;
    server_name  ~^(?<name>.+)\.helpcenter.qa.softuni.tk;
    server_name  helpcenter.qa.softuni.tk;

    location / {
        return 301 https://$host$request_uri;
    }

    location /.well-known/acme-challenge/ {
       root /var/www/certbot;
    }
}

server {
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    listen 443 ssl;
    server_name  helpcenter.qa.softuni.tk;
    server_name ~^(?<name>.+)\.helpcenter.qa.softuni.tk;
    ssl_certificate /etc/letsencrypt/live/devsoftuniorg.ml/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/devsoftuniorg.ml/privkey.pem;

    merge_slashes off;
    rewrite ^(.*?)//+(.*?)$ $1/$2 permanent;
    large_client_header_buffers 4 16k;
    access_log /var/log/nginx/access.log json_combined;

    location / {
        include /etc/nginx/shared/*;

        proxy_pass http://help_center_ui/;
    }
}
