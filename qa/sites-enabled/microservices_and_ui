server {
    listen 80;

    server_name learn.qa.softuni.org;
    
    # Intentionally commented out with option to revert easily regions selection logic
    # server_name  ~^(?<name>.+)\.learn.qa.softuni.org;
    # server_name softuni.co.za;

    location / {
      return 301 https://learn.qa.softuni.org$request_uri;
    }

    location /.well-known/acme-challenge/ {
      root /var/www/certbot;
    }
}

server {
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    listen 443 ssl;

    large_client_header_buffers 4 32k;

    server_name learn.qa.softuni.org;
    # Intentionally commented out with option to revert easily regions selection logic
    # server_name ~^(?<name>.+)\.learn.qa.softuni.org;
    # server_name softuni.co.za;

    ssl_certificate /etc/letsencrypt/live/learn.qa.softuni.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/learn.qa.softuni.org/privkey.pem;

    merge_slashes off;
    rewrite ^(.*?)//+(.*?)$ $1/$2 permanent;
    access_log /var/log/nginx/access.log json_combined;

    location /api/ {
        include /etc/nginx/shared/*;

        proxy_pass http://gateway/api/;
    }

    # root /etc/nginx/html;
    location / {
    	access_by_lua_file '/etc/nginx/lua/region_based_url.lua';

        include /etc/nginx/shared/*;
        proxy_pass http://ui/;
	#  try_files /index.html =404;
    }
}
